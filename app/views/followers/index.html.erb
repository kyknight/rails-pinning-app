<p id="notice"><%= notice %></p>

<div class="header">
  <h1>
  <i class="fa fa-users"></i>    
<h1>People Who You Follow</h1>
</div>

<div class="table-responsive">
   <table class="table table-striped table-bordered">
        <thead>
        <tr>
           <th>Following</th>
           <th>Boards</th>
           <th colspan="5"></th>
        </tr>
       </thead>

    <tbody>
      <% @followers.each do |follower| %>
      <tr>
        <td><%= follower.user.full_name if follower.user %></td>
        <% follower.user.boards.each do |board| %>
        <td><%= "#{user.board.name}/" %></td>
        <% end %>

        <td><%= button_to 'UnFollow', follower, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

   </tbody>
  </table>
  </div>

<div class="table-responsive">
<table class="table table-striped table-boardered ">
  <thead>
    <tr>
      <th>Followed by</th>
      <th>Boards</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% if !@followed_by.nil? %>
    <% @followed_by.each do |follower| %>
      <tr>
        <td><%= follower.user.full_name if follower.user %></td>
        <% follower.user.boards.each do |board| %>
        <td><%= "#{user.board.name}/" %></td>
        <% end %>
        <td><%= button_to 'UnFollow', follower, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>
<br>

<br>
<%= link_to 'New Follower', new_follower_path %>
<br>
<hr>
