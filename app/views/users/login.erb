<h1>Lets start the Fun!</h1>

<div class="well">
<div class="panel-body flex-group">
        <%= form_tag('/login', class: 'col-xs-8') do %>
	<div class="form-group">
    	<label for="email" class="col-xs-3 control-label">Email:</label>
    	<div class="col-xs-8">
    	<%= email_field_tag :email, nil, placeholder: 'email@example.com', class: "form-control" %>
    	</div>
	</div>
</div>

<div class="panel-body">
	<div class="form-group flex-group">
    	<label for="password" class="col-xs-2 control-label">Password:</label>
    	<div class="col-xs-6">
    	<%= password_field_tag :password, nil, placeholder: 'Super Secret Password', class: "form-control" %>
    	</div>
	</div>
</div>

<div class="panel-body flex-group">
	<div class="form-group">
    	<div class="col-xs-8">
    	<%= submit_tag "Sign in", class: "btn btn-default" %>
    	</div>
	</div>
</div>

<div class="btn btn-default">
<%= link_to 'Sign Up', signup_path %>
</div>

        <% if @errors %>
  <div id="error_explanation">
    <h2><%= @errors %></h2>
    </div>
        <% end %>
            <% end %>
</div>
</div>
