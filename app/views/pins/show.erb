<div class="header">
  <h1>
    <i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h1>
</div>

<div class="show-pin">
  <p><%= "#{@pin.text}" %></p>

  <hr/>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
    <a class="url" href="<%= "#{@pin.url}" %>" target="_blank">
      <%= "#{@pin.url}" %>
    </a>
  </p>
  <div align="right">
    <a href="/pins/:id/edit">
        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
          Edit Pin
    </a>
  </div>
</div>
<br/>
<a href="/">
  <i class="fa fa-arrow-circle-o-left" aria-hidden="true"></i>
  Back to Home
</a>
